@using Alamut.Helpers.Linq
@using Mobin.CoreProject.Admin.Toolkit
@using Newtonsoft.Json
@model Mobin.CoreProject.Core.DTOs.Forest.ForestEditDTO

@{
    ViewData["Title"] = "ویرایش درخت";
}

@{
    ViewBag.BreadCrumb = new BreadCrumb
    {
        Links = new List<BreadCrumbLink>
        {
            new BreadCrumbLink
            {
                Title = "درخت",
                Link = Url.Action("Index"),
            },

            new BreadCrumbLink
            {
                Title = ViewData["Title"].ToString(),
            },
        }
    };
}

@Html.Raw(RegateText.Init())
@Html.Raw(RegateTextarea.Init())


<div class="content">

    <form asp-action="Edit" asp-route-id="@Model.Id">
        <div class="block block-rounded block-bordered">
            <div class="block-content">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">عنوان</label>
                    <div class="col-sm-9">
                        @Html.Raw(RegateText.Build("Title", Model.Title, true))
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">توضیحات</label>
                    <div class="col-sm-9">
                        @Html.Raw(RegateTextarea.Build("Description", Model.Description))
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">برگ‌ها</label>
                    <div class="col-sm-9">
                        <div id="app">
                            <div v-for="(item, index) in items">
                                <input type="hidden" v-bind:name="'Leafs['+index+'].Id'" v-model="item.Id" />
                                <input type="text" v-bind:name="'Leafs['+index+'].Title'" v-model="item.Title" />

                                <button type="button" v-on:click="removeItem(index)">x</button>
                            </div>

                            <button type="button" v-on:click="addItem">+</button>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="block-content block-content-full block-content-sm bg-body-light text-right">
                <button type="submit" class="btn btn-hero-success">
                    <i class="fa fa-check"></i> ثبت اطلاعات
                </button>
            </div>
        </div>
    </form>

</div>

<script>
    var data = @Html.Raw(JsonConvert.SerializeObject(Model.Leafs));
    console.log(data);

    var app = new Vue({
        el: '#app',

        data: {
            items: data
        },

        methods: {
            addItem: function () {
                this.items.push({ Id: 0, Title: '' });
            },

            removeItem: function (index) {
                this.items.splice(index, 1);
            }
        }
    });
</script>
