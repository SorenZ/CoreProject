@using Mobin.CoreProject.AuthAdmin.Toolkit

@{
    ViewData["Title"] = "ثبت کاربر جدید";
}

@{
    ViewBag.BreadCrumb = new BreadCrumb
    {
        Links = new List<BreadCrumbLink>
{
    new BreadCrumbLink
    {
        Title = "کاربر",
        Link = Url.Action("Index"),
    },

    new BreadCrumbLink
    {
        Title = ViewData["Title"].ToString(),
    },
}
    };
}

@Html.Raw(RegateText.Init())
<div class="content">

    <form asp-action="CreatePublicUser">
        <div class="block block-rounded block-bordered">
            <div class="block-content">

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">نام کاربری</label>
                    <div class="col-sm-9">
                        <div dir="ltr">
                            <input type="email" name="Username" class="form-control" required="required" placeholder="please enter your email" pattern="[\+\.\@@a-zA-Z0-9_-]" title="please use validate character"/>
                            @*@Html.Raw(RegateText.Build("Username", isRequired: true))*@
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">رمز ورود</label>
                    <div class="col-sm-9">
                        <div dir="ltr">
                            @*@Html.Raw(RegateText.Build("Password", isRequired: true))*@
                            
                            <input type="password" name="Password" class="form-control" required="required" placeholder="password"  pattern=".{6,}"  title="6 characters minimum"/>
                        </div>
                    </div>
                </div>

            </div>
            <div class="block-content block-content-full block-content-sm bg-body-light text-right">
                <button type="submit" class="btn btn-hero-success">
                    <i class="fa fa-check"></i> ثبت اطلاعات
                </button>
            </div>
        </div>
    </form>

</div>

